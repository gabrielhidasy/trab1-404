void labelizer(FILE *codigo, struct pcounter pc, list *listlabels) {
  char line[100];
  fscanf(codigo,"%s",line);
  if(isLabel(line)) {
    addLabel(line,pc,listlabels);
  }
  else {
    if(isDiretiva) {
      executadiretiva(line);
    //avan√ßa o pc
    if(pc.side==0) pc.side=1;
    else {
      pc.position++;
      pc.side=0;
    }
  }
}
